package textExcel;
public class SpreadsheetLocation implements Location
{
	private String valueAtTheLocation;
	
	  public SpreadsheetLocation(String cellName){
	    	valueAtTheLocation = cellName;
	    }
    @Override
    public int getRow(){ 
    	int rowInt = Integer.parseInt(valueAtTheLocation.substring(1));
    return rowInt - 1; 
    }

    @Override
    public int getCol(){
    	int column;
    	if ( valueAtTheLocation.charAt(0)> 90) {
    		column = valueAtTheLocation.charAt(0) - 97;
    } else {
    	column = valueAtTheLocation.charAt(0)- 65;
    }
    return column;
    }

  
}